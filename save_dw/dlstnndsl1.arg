SELECT listino.id ,listino.cod_art ,trim(prodotti.des_mkt) as prodotti_des ,listino.magazzino ,listino.campione ,listino.attivo ,listino.tipo ,listino.prezzo ,listino.id_cond_fatt_1 ,cf1.descr as cf1_descr ,listino.prezzo_2	,listino.id_cond_fatt_2	,cf2.descr as cf2_descr ,listino.prezzo_3	,listino.id_cond_fatt_3 ,cf3.descr as cf3_descr ,listino.x_datins ,listino.x_utente FROM listino left outer join prodotti on listino.cod_art = prodotti.codice left outer join cond_fatt as cf1 on listino.id_cond_fatt_1 = cf1.id left outer join cond_fatt as cf2 on listino.id_cond_fatt_2 = cf2.id left outer join cond_fatt as cf3 on listino.id_cond_fatt_3 = cf3.id WHERE listino.cod_cli = 0 and (listino.contratto = 0 or listino.contratto is null) order by listino.cod_art, listino.id
