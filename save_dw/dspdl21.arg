SELECTsped.num_bolla_out , sped.data_bolla_out, sped.id_sped, sped.id_docprod, sped.mezzo , sped.clie_3 , sped.clie_2 , clienti.rag_soc_10, clienti.loc_1, clienti.prov_1, clienti.id_nazione_1, sped.causale ,COALESCE(stampa, "N") as stampa,sped.x_datins as x_datins,sped.x_utente as x_utente,sped.cura_trasp ,sped.data_rit as k_ritiro_data,(COALESCE(sped.ora_rit,'')) as k_ritiro_ora, (select top 1 id_memo from meca_memo mm where mm.id_meca in (select armo.id_meca from armo inner join arsp on armo.id_armo = arsp.id_armo where arsp.id_sped = sped.id_sped) and mm.allarme in ('A', 'T')union all select top 1 id_memo from clienti_memo cm where (sped.clie_2 = cm.id_cliente or sped.clie_3 = cm.id_cliente) and cm.allarme in ('A', 'T')) as id_memoFROM sped LEFT OUTER JOIN clienti ON sped.clie_2 = clienti.codicewhere sped.data_bolla_out between '01-01-2019' and '17-05-2019'and (0 = 0 or sped.clie_2 = 0)
